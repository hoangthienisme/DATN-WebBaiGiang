@model IEnumerable<WebBaiGiang.Models.Khoa>

@{
    ViewData["Title"] = "Quản lý Khoa";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form class="d-flex" method="get" asp-action="Index" asp-controller="Khoa" asp-area="Admin">
        <input type="text" name="search" class="form-control me-2" placeholder="Tìm kiếm khoa..."/>
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>

    <a class="btn btn-success" href="@Url.Action("Create", "Khoa", new { area = "Admin" })">
        <i class="bi bi-plus-circle"></i> Thêm mới Khoa
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã Khoa</th>
            <th>Tên Khoa</th>
            <th>Mô tả</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var khoa in Model)
            {
                // ...
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">Không có dữ liệu khoa nào.</td></tr>
        }

        @if (Model.Any())
        {
            foreach (var khoa in Model)
            {
                <tr>
                    <td>@khoa.Id</td>
                    <td>@khoa.Name</td>
                    <td>@khoa.Description</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Khoa", new { id = khoa.Id, area = "Admin" })" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Khoa", new { id = khoa.Id, area = "Admin" })" title="Xóa"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa khoa này không?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">Không có dữ liệu khoa nào.</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">»</a></li>
    </ul>
</nav>

