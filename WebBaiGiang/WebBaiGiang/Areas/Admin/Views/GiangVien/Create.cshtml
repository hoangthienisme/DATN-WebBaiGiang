@model WebBaiGiang.Models.NguoiDung

@{
    ViewData["Title"] = "Tạo tài khoản giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên</label>
                <input name="Name" asp-for="Name" class="form-control" placeholder="Nhập họ tên..." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input name="Email" asp-for="Email" class="form-control" placeholder="Email đăng nhập..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input name="Password" asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Phone" class="form-label">Số điện thoại</label>
                <input name="Phone" asp-for="Phone" class="form-control" placeholder="SĐT liên hệ (nếu có)..." />
                <span asp-validation-for="Phone" class="text-danger" />
            </div>

            <!-- Gán role ẩn -->
            <input type="hidden" name="Role" value="Teacher" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Tạo tài khoản
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}

