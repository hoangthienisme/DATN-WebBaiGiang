@model IEnumerable<WebBaiGiang.Models.HocPhan>

@{
    ViewData["Title"] = "Quản lý Học phần";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form class="d-flex" method="get" asp-action="Index" asp-controller="HocPhan" asp-area="Admin">
        <input type="text" name="search" class="form-control me-2" placeholder="Tìm kiếm học phần..." />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>

    <a class="btn btn-success" href="@Url.Action("Create", "HocPhan", new { area = "Admin" })">
        <i class="bi bi-plus-circle"></i> Thêm mới Học phần
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã Học phần</th>
            <th>Tên Học phần</th>
            <th>Số tín chỉ</th>
            <th>Khoa</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var hocPhan in Model)
            {
                // ...
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">Không có dữ liệu nào.</td></tr>
        }

        @if (Model.Any())
        {
            foreach (var hocphan in Model)
            {
                <tr>
                    <td>@hocphan.Id</td>
                    <td>@hocphan.Name</td>
 @*                    <td>@hocphan.Khoa.TenKhoa</td> *@ 
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "HocPhan", new { id = hocphan.Id, area = "Admin" })" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "HocPhan", new { id = hocphan.Id, area = "Admin" })" title="Xóa"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa học phần này không?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center text-muted">Không có dữ liệu học phần nào.</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">»</a></li>
    </ul>
</nav>
