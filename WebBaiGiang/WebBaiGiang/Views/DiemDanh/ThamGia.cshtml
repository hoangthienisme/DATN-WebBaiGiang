@model WebBaiGiang.Models.DiemDanh

@{
    ViewData["Title"] = "Điểm danh";
}

<div class="container mt-4">
    <h2>Phiếu điểm danh</h2>
    <p><strong>Lớp:</strong> @Model.Class.Id</p>
    <p><strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Mã phiếu:</strong> @Model.MaPhieu</p>

    <form asp-action="ThamGiaSubmit" method="post">
        <input type="hidden" name="ma" value="@Model.MaPhieu" />
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Xác nhận có mặt</button>
        </div>
    </form>
</div>
