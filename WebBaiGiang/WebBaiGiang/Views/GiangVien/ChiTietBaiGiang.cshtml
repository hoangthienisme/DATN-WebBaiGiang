 <script>
        $(document).ready(function () {
            // Lưu trữ các instance của CKEditor
            let editors = {};

            // Khởi tạo CKEditor cho mô tả bài giảng
            if ($('#description-editor').length) {
                ClassicEditor.create(document.querySelector('#description-editor'))
                    .then(editor => {
                        editors['description-editor'] = editor;
                    })
                    .catch(error => console.error('Lỗi khởi tạo CKEditor:', error));
            }

            // Khởi tạo CKEditor cho mô tả từng bài
            $('[id^="editor-"]').each(function () {
                ClassicEditor.create(this)
                    .then(editor => {
                        editors[this.id] = editor;
                    })
                    .catch(error => console.error('Lỗi khởi tạo CKEditor:', error));
            });

            // Khởi tạo CKEditor cho mô tả bài mới
            $('[id^="newBaiDescription_"]').each(function () {
                ClassicEditor.create(this)
                    .then(editor => {
                        editors[this.id] = editor;
                    })
                    .catch(error => console.error('Lỗi khởi tạo CKEditor:', error));
            });

            // Tự động điều chỉnh chiều cao textarea
            $('textarea[name^="Chuongs"], textarea[name^="Chuongs["][name$=".Title"]').each(function () {
                const resize = () => {
                    this.style.height = 'auto';
                    this.style.height = this.scrollHeight + 'px';
                };
                $(this).on('input', resize).trigger('input');
            });

            // Xử lý mục lục
            const tocItems = $('.toc-item');
            const tocSearchInput = $('#tocSearch');

            tocItems.on('click', function () {
                tocItems.removeClass('active');
                $(this).addClass('active');
                const targetId = $(this).data('target');
                $(`#${targetId}`)[0].scrollIntoView({ behavior: 'smooth', block: 'start' });
            });

            tocSearchInput.on('input', function () {
                const keyword = $(this).val().toLowerCase();
                tocItems.each(function () {
                    const text = $(this).data('search') || '';
                    $(this).css('display', text.includes(keyword) ? 'block' : 'none');
                });
            });

            // Highlight mục lục khi cuộn
            $(window).on('scroll', function () {
                const sections = $('[id^="chapter-"], [id^="lesson-"]');
                let activeId = null;
                sections.each(function () {
                    const rect = this.getBoundingClientRect();
                    if (rect.top <= 100 && rect.bottom >= 100) {
                        activeId = this.id;
                    }
                });
                if (activeId) {
                    tocItems.removeClass('active').filter(`[data-target="${activeId}"]`).addClass('active');
                }
            });

            // Xử lý form thêm chương và bài
            $('#form-them-chuong, [id^="form-them-bai-"]').on('submit', function (e) {
                e.preventDefault();
                const $form = $(this);
                const $submitBtn = $form.find('button[type="submit"]');
                $submitBtn.prop('disabled', true).prepend('<span class="spinner-border spinner-border-sm me-1"></span>');

                const formData = new FormData(this);
                if ($form.find('[id^="newBaiDescription_"]').length) {
                    const editorId = $form.find('[id^="newBaiDescription_"]').attr('id');
                    formData.set('Description', editors[editorId] ? editors[editorId].getData() : '');
                }

                for (var pair of formData.entries()) {
                    console.log(pair[0] + ': ' + pair[1]);
                }

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            alert('Thêm thành công!');
                            location.reload();
                        } else {
                            alert('Thêm thất bại: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi AJAX:', status, error);
                        alert('Có lỗi xảy ra khi thêm.');
                    },
                    complete: function () {
                        $submitBtn.prop('disabled', false).find('.spinner-border').remove();
                    }
                });
            });

            // Xử lý lưu tất cả
            $('#saveAll').on('click', function () {
                const $btn = $(this);
                $btn.prop('disabled', true).prepend('<span class="spinner-border spinner-border-sm me-1"></span>');

                const formData = new FormData();

                // Bổ sung AntiForgeryToken
                formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

                // Gửi dữ liệu bài giảng
                formData.append('Id', $('input[name="Id"]').val());
                formData.append('Title', $('input[name="Title"]').val());
                formData.append('Description', editors['description-editor'] ? editors['description-editor'].getData() : $('#description-editor').val());

                // Duyệt qua các chương
                $('textarea[name^="Chuongs["][name$=".Title"]').each(function (index) {
                    const id = $(`input[name="Chuongs[${index}].Id"]`).val();
                    const title = $(this).val();
                    formData.append(`Chuongs[${index}].Id`, id);
                    formData.append(`Chuongs[${index}].Title`, title);
                });

                // Duyệt qua các bài
                $('.bai-input').each(function () {
                    const chuongIndex = $(this).data('chuong-index');
                    const baiIndex = $(this).data('bai-index');
                    const baiId = $(this).data('bai-id');
                    const chuongId = $(this).data('chuong-id');

                    const title = $(this).find('.bai-title').val();
                    const description = editors[`editor-${baiId}`] ? editors[`editor-${baiId}`].getData() : $(this).find('.bai-description').val();

                    formData.append(`Chuongs[${chuongIndex}].Bais[${baiIndex}].Id`, baiId);
                    formData.append(`Chuongs[${chuongIndex}].Bais[${baiIndex}].ChuongId`, chuongId);
                    formData.append(`Chuongs[${chuongIndex}].Bais[${baiIndex}].Title`, title);
                    formData.append(`Chuongs[${chuongIndex}].Bais[${baiIndex}].Description`, description);
                });

                // Debug dữ liệu gửi đi
                for (var pair of formData.entries()) {
                    console.log(pair[0] + ': ' + pair[1]);
                }

                // AJAX gửi lên server
                $.ajax({
                    url: '/GiangVien/SaveAll',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        const $errorBox = $('#save-error');
                        if (response.success) {
                            $errorBox.addClass('d-none').text('');
                            alert('Lưu thành công!');
                            location.reload();
                        } else {
                            $errorBox.removeClass('d-none').text('❌ ' + response.message);
                        }
                    },
                    error: function (xhr) {
                        const $errorBox = $('#save-error');
                        let errorMessage = '❌ Có lỗi xảy ra khi lưu.';
                        if (xhr.responseText) {
                            try {
                                const response = JSON.parse(xhr.responseText);
                                if (response.message) errorMessage += `\nChi tiết: ${response.message}`;
                            } catch (_) {
                                // Nếu không phải JSON, giữ nguyên
                            }
                        }
                        $errorBox.removeClass('d-none').text(errorMessage);
                    },
                    complete: function () {
                        $btn.prop('disabled', false).find('.spinner-border').remove();
                    }
                });
            });

            // Xử lý form thêm tài nguyên
            $('form[action="ThemTaiNguyen"]').on('submit', function (e) {
                e.preventDefault();
                const $form = $(this);
                const $submitBtn = $form.find('button[type="submit"]');
                $submitBtn.prop('disabled', true).prepend('<span class="spinner-border spinner-border-sm me-1"></span>');

                const formData = new FormData(this);
                for (var pair of formData.entries()) {
                    console.log(pair[0] + ': ' + pair[1]);
                }

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data, textStatus, xhr) {
                        if (xhr.getResponseHeader('Location')) {
                            window.location.href = xhr.getResponseHeader('Location');
                        } else {
                            if (data.success) {
                                window.location.reload();
                            } else {
                                alert('Thêm thất bại: ' + data.message);
                            }
                        }
