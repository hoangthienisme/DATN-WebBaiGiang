@model WebBaiGiang.ViewModel.ChiTietBaiGiangViewModel
@using System.Security.Claims
@using System.Web
@{
    ViewData["Title"] = "Chi tiết bài giảng";

    var currentUserRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "Role")?.Value;
    var taiNguyenAnh = Model.TaiNguyens?.Where(t => t.Loai == "image");
    var taiNguyenYoutube = Model.TaiNguyens?.Where(t => t.Loai == "youtube");
    var taiNguyenDocs = Model.TaiNguyens?.Where(t => t.Loai == "tailieu");
    var currentUserIdString = User.FindFirstValue(ClaimTypes.NameIdentifier);

    int currentUserId = 0;
    if (!string.IsNullOrEmpty(currentUserIdString))
    {
        int.TryParse(currentUserIdString, out currentUserId);
    }
}

<!-- Custom style -->
<link rel="stylesheet" href="~/css/chitietbaigiang.css" />

<!-- Bootstrap 5 -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- CKEditor 5 -->
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-book-open me-2"></i> Chỉnh sửa bài giảng
                    </h2>
                </div>
                <div class="card-body">
                    <form id="mainForm" asp-action="SaveAll" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.BaiGiang.Id" />
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tiêu đề</label>
                            <input type="text" name="Title" class="form-control" value="@Model.Title" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả</label>
                            <textarea name="Description" id="description-editor" class="form-control">@Model.Description</textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar - Mục lục -->
        <div class="col-lg-3 col-md-4">
            <div class="sidebar-toc sticky-top">
                <div class="toc-search">
                    <h5 class="mb-3">
                        <i class="fas fa-list-ul me-2"></i> Mục lục
                    </h5>
                    <div class="input-group">
                        <input type="text" id="tocSearch" class="form-control form-control-sm"
                               placeholder="Tìm kiếm chương, bài..." aria-label="Tìm kiếm mục lục">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                </div>
                <div id="tocContent">
                    @if (Model.Chuongs?.Any() == true)
                    {
                        @foreach (var chuong in Model.Chuongs.OrderBy(c => c.SortOrder))
                        {
                            <div class="toc-item toc-chapter" data-target="chapter-@chuong.Id"
                                 data-search="@chuong.Title.ToLower()">
                                <i class="fas fa-folder me-2"></i> Chương @chuong.SortOrder: @chuong.Title
                            </div>
                            @if (chuong.Bais?.Any() == true)
                            {
                                @foreach (var bai in chuong.Bais.OrderBy(b => b.SortOrder))
                                {
                                    <div class="toc-item toc-lesson" data-target="lesson-@bai.Id"
                                         data-search="@bai.Title.ToLower()">
                                        <i class="fas fa-bookmark me-2"></i> @chuong.SortOrder.@bai.SortOrder @bai.Title
                                    </div>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="content-area">
                <div class="d-flex justify-content-start mb-3 gap-2">
                    <button type="button" class="btn btn-sm btn-primary" onclick="hienOThemChuong()">
                        <i class="fas fa-plus me-1"></i> Thêm chương
                    </button>
                </div>

                <div id="khoi-them-chuong" class="mb-4" style="display: none;">
                    <form id="form-them-chuong" asp-action="ThemChuong" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                        <div class="d-flex align-items-start gap-2">
                            <input type="text" id="newChuongTitle" name="Title" class="form-control"
                                   placeholder="Nhập tên chương..." required />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-check"></i> Lưu
                            </button>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="anOThemChuong()">
                                <i class="fas fa-times"></i> Hủy
                            </button>
                        </div>
                    </form>
                </div>

                @if (Model.Chuongs?.Any() == true)
                {
                    int chuongIndex = 0;
                    @foreach (var chuong in Model.Chuongs.OrderBy(c => c.SortOrder))
                    {
                        <div id="chapter-@chuong.Id" class="chapter-section mb-4">
                            <div class="chapter-divider d-flex justify-content-between align-items-center">
                                <div class="chapter-title d-flex align-items-center">
                                    <i class="fas fa-folder-open me-2"></i>
                                    <span class="fw-bold fs-4 me-2 text-dark">Chương @chuong.SortOrder:</span>
                                    <textarea name="Chuongs[@chuongIndex].Title" class="input-as-text fw-bold fs-5 text-dark chuong-title" rows="1"
                                              style="resize: none; overflow: hidden;">@chuong.Title</textarea>
                                    <input type="hidden" name="Chuongs[@chuongIndex].Id" value="@chuong.Id" />
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-primary" onclick="hienOThemBai(@chuong.Id)">
                                        <i class="fas fa-plus me-1"></i> Thêm bài
                                    </button>
                                    <form asp-action="XoaChuong" method="post" onsubmit="return confirm('Xóa chương này?')">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="Id" value="@chuong.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div id="khoi-them-bai-@chuong.Id" class="mb-3" style="display: none;">
                                <form id="form-them-bai-@chuong.Id" asp-action="ThemBai" method="post" enctype="multipart/form-data">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ChuongId" value="@chuong.Id" />
                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                    <div class="card p-3">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Tiêu đề bài</label>
                                            <input type="text" id="newBaiTitle_@chuong.Id" name="Title" class="form-control" placeholder="Nhập tên bài..." required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Mô tả</label>
                                            <textarea name="Description" id="newBaiDescription_@chuong.Id" class="form-control" placeholder="Nhập mô tả bài..."></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Ảnh minh họa</label>
                                            <input type="file" name="ImageFiles" class="form-control" multiple accept="image/*" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Link YouTube</label>
                                            <div id="youtube-links-@chuong.Id">
                                                <div class="input-group mb-2">
                                                    <input type="url" name="YoutubeLinks" class="form-control" placeholder="Nhập link YouTube..." />
                                                    <button type="button" class="btn btn-outline-secondary" onclick="addYoutubeLink(@chuong.Id)">+</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Tài liệu</label>
                                            <input type="file" name="DocumentFiles" class="form-control" multiple accept=".pdf,.doc,.docx" />
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i> Lưu
                                            </button>
                                            <button type="button" class="btn btn-secondary btn-sm" onclick="anOThemBai(@chuong.Id)">
                                                <i class="fas fa-times"></i> Hủy
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            @if (chuong.Bais?.Any() == true)
                            {
                                int baiIndex = 0;
                                @foreach (var bai in chuong.Bais.OrderBy(b => b.SortOrder))
                                {
                                    var baiImages = bai.TaiNguyens?.Where(t => t.Loai == "image");
                                    var baiVideos = bai.TaiNguyens?.Where(t => t.Loai == "youtube");
                                    var baiDocs = bai.TaiNguyens?.Where(t => t.Loai == "tailieu");

                                    <div id="lesson-@bai.Id" class="lesson-content mb-4 p-3 border rounded bg-light bai-input"
                                         data-chuong-index="@chuongIndex" data-bai-index="@baiIndex" data-bai-id="@bai.Id" data-chuong-id="@chuong.Id">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-bookmark me-2 text-primary"></i>
                                            <span class="fw-normal fs-6 text-muted me-2">Bài @chuong.SortOrder.@bai.SortOrder:</span>
                                            <textarea name="Chuongs[@chuongIndex].Bais[@baiIndex].Title" class="input-as-text fs-6 text-muted bai-title" rows="1"
                                                      style="min-width: 50%; resize: none; overflow: hidden;">@bai.Title</textarea>
                                            <input type="hidden" name="Chuongs[@chuongIndex].Bais[@baiIndex].Id" value="@bai.Id" />
                                            <input type="hidden" name="Chuongs[@chuongIndex].Bais[@baiIndex].ChuongId" value="@chuong.Id" />
                                        </div>
                                        <textarea name="Chuongs[@chuongIndex].Bais[@baiIndex].Description" id="editor-@bai.Id" class="bai-description">@bai.Description</textarea>

                                        <!-- Tài nguyên của bài -->
                                        <div class="resource-section mt-4">
                                            <h6 class="mb-3">
                                                <i class="fas fa-archive me-2"></i> Tài nguyên của bài
                                            </h6>
                                            <div class="row g-4">
                                                <!-- Ảnh minh họa -->
                                                <div class="col-md-4">
                                                    <div class="card h-100 border-0 bg-white bg-opacity-90">
                                                        <div class="card-header bg-primary text-white">
                                                            <h6 class="mb-0">
                                                                <i class="fas fa-images me-2"></i> Ảnh minh họa
                                                                @if (baiImages?.Any() == true)
                                                                {
                                                                    <span class="badge bg-light text-primary ms-2">@baiImages.Count()</span>
                                                                }
                                                            </h6>
                                                        </div>
                                                        <div class="card-body">
                                                            @if (baiImages?.Any() == true)
                                                            {
                                                                <div class="row g-2">
                                                                    @foreach (var img in baiImages.Take(4))
                                                                    {
                                                                        <div class="col-6">
                                                                            <div class="card shadow-sm position-relative">
                                                                                <img src="@img.Url" alt="Ảnh minh họa" class="card-img-top" style="height: 100px; object-fit: cover;" />
                                                                                <div class="card-body p-2">
                                                                                    <a href="@img.Url" target="_blank" class="btn btn-sm btn-primary w-100">
                                                                                        <i class="fas fa-external-link-alt me-1"></i> Xem
                                                                                    </a>
                                                                                    @if (currentUserRole == "Teacher")
                                                                                    {
                                                                                        <form asp-action="XoaTaiNguyen" method="post" class="mt-2" onsubmit="return confirm('Xóa ảnh này?')">
                                                                                            @Html.AntiForgeryToken()
                                                                                            <input type="hidden" name="Id" value="@img.Id" />
                                                                                            <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                                            <button type="submit" class="btn btn-sm btn-danger w-100">
                                                                                                <i class="fas fa-trash"></i> Xóa
                                                                                            </button>
                                                                                        </form>
                                                                                    }
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                </div>
                                                                @if (baiImages.Count() > 4)
                                                                {
                                                                    <div class="text-center mt-3">
                                                                        <small class="text-muted">Và @(baiImages.Count() - 4) ảnh khác...</small>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div class="text-center text-muted py-4">
                                                                    <i class="fas fa-image fa-2x mb-2 opacity-50"></i>
                                                                    <p class="mb-0">Chưa có ảnh minh họa</p>
                                                                </div>
                                                            }
                                                            @if (currentUserRole == "Teacher")
                                                            {
                                                                <form asp-action="ThemTaiNguyen" method="post" enctype="multipart/form-data" class="mt-3">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="BaiId" value="@bai.Id" />
                                                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                    <input type="file" name="ImageFiles" class="form-control mb-2" multiple accept="image/*" />
                                                                    <button type="submit" class="btn btn-sm btn-success">
                                                                        <i class="fas fa-upload"></i> Thêm ảnh
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Video YouTube -->
                                                <div class="col-md-4">
                                                    <div class="card h-100 border-0 bg-white bg-opacity-90">
                                                        <div class="card-header bg-danger text-white">
                                                            <h6 class="mb-0">
                                                                <i class="fab fa-youtube me-2"></i> Video YouTube
                                                                @if (baiVideos?.Any() == true)
                                                                {
                                                                    <span class="badge bg-light text-danger ms-2">@baiVideos.Count()</span>
                                                                }
                                                            </h6>
                                                        </div>
                                                        <div class="card-body">
                                                            @if (baiVideos?.Any() == true)
                                                            {
                                                                @foreach (var yt in baiVideos.Take(2))
                                                                {
                                                                    var embedUrl = yt.Url;
                                                                    if (yt.Url.Contains("watch?v="))
                                                                    {
                                                                        embedUrl = yt.Url.Replace("watch?v=", "embed/");
                                                                    }
                                                                    else if (yt.Url.Contains("youtu.be"))
                                                                    {
                                                                        var id = yt.Url.Split("/").Last();
                                                                        embedUrl = $"https://www.youtube.com/embed/{id}";
                                                                    }
                                                                    <div class="card shadow-sm mb-3 position-relative">
                                                                        <div class="ratio ratio-16x9">
                                                                            <iframe src="@embedUrl" allowfullscreen class="rounded border"></iframe>
                                                                        </div>
                                                                        <div class="text-center mt-2">
                                                                            <a href="@yt.Url" target="_blank" class="btn btn-outline-danger btn-sm w-100">
                                                                                <i class="fab fa-youtube me-1"></i> Xem trên YouTube
                                                                            </a>
                                                                            @if (currentUserRole == "Teacher")
                                                                            {
                                                                                <form asp-action="XoaTaiNguyen" method="post" class="mt-2" onsubmit="return confirm('Xóa video này?')">
                                                                                    @Html.AntiForgeryToken()
                                                                                    <input type="hidden" name="Id" value="@yt.Id" />
                                                                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                                    <button type="submit" class="btn btn-sm btn-danger w-100">
                                                                                        <i class="fas fa-trash"></i> Xóa
                                                                                    </button>
                                                                                </form>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                }
                                                                @if (baiVideos.Count() > 2)
                                                                {
                                                                    <div class="text-center">
                                                                        <small class="text-muted">Và @(baiVideos.Count() - 2) video khác...</small>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div class="text-center text-muted py-4">
                                                                    <i class="fab fa-youtube fa-2x mb-2 opacity-50"></i>
                                                                    <p class="mb-0">Chưa có video YouTube</p>
                                                                </div>
                                                            }
                                                            @if (currentUserRole == "Teacher")
                                                            {
                                                                <form asp-action="ThemTaiNguyen" method="post" class="mt-3">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="BaiId" value="@bai.Id" />
                                                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                    <input type="url" name="YoutubeLinks" class="form-control mb-2" placeholder="Nhập link YouTube..." />
                                                                    <button type="submit" class="btn btn-sm btn-success">
                                                                        <i class="fas fa-upload"></i> Thêm video
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Tài liệu -->
                                                <div class="col-md-4">
                                                    <div class="card h-100 border-0 bg-white bg-opacity-90">
                                                        <div class="card-header bg-success text-white">
                                                            <h6 class="mb-0">
                                                                <i class="fas fa-file-alt me-2"></i> Tài liệu đính kèm
                                                                @if (baiDocs?.Any() == true)
                                                                {
                                                                    <span class="badge bg-light text-success ms-2">@baiDocs.Count()</span>
                                                                }
                                                            </h6>
                                                        </div>
                                                        <div class="card-body">
                                                            @if (baiDocs?.Any() == true)
                                                            {
                                                                @foreach (var doc in baiDocs.Take(3))
                                                                {
                                                                    <div class="card shadow-sm mb-3 position-relative">
                                                                        <div class="card-body text-center p-3">
                                                                            <i class="fas fa-file-pdf text-danger mb-2" style="font-size: 2rem;"></i>
                                                                            <p class="mb-2 fw-medium small">Tài liệu</p>
                                                                            <a href="@doc.Url" target="_blank" class="btn btn-success btn-sm w-100">
                                                                                <i class="fas fa-download me-1"></i> Tải về
                                                                            </a>
                                                                            @if (currentUserRole == "Teacher")
                                                                            {
                                                                                <form asp-action="XoaTaiNguyen" method="post" class="mt-2" onsubmit="return confirm('Xóa tài liệu này?')">
                                                                                    @Html.AntiForgeryToken()
                                                                                    <input type="hidden" name="Id" value="@doc.Id" />
                                                                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                                    <button type="submit" class="btn btn-sm btn-danger w-100">
                                                                                        <i class="fas fa-trash"></i> Xóa
                                                                                    </button>
                                                                                </form>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                }
                                                                @if (baiDocs.Count() > 3)
                                                                {
                                                                    <div class="text-center">
                                                                        <small class="text-muted">Và @(baiDocs.Count() - 3) tài liệu khác...</small>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div class="text-center text-muted py-4">
                                                                    <i class="fas fa-file-alt fa-2x mb-2 opacity-50"></i>
                                                                    <p class="mb-0">Chưa có tài liệu đính kèm</p>
                                                                </div>
                                                            }
                                                            @if (currentUserRole == "Teacher")
                                                            {
                                                                <form asp-action="ThemTaiNguyen" method="post" enctype="multipart/form-data" class="mt-3">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="BaiId" value="@bai.Id" />
                                                                    <input type="hidden" name="BaiGiangId" value="@Model.BaiGiang.Id" />
                                                                    <input type="file" name="DocumentFiles" class="form-control mb-2" multiple accept=".pdf,.doc,.docx" />
                                                                    <button type="submit" class="btn btn-sm btn-success">
                                                                        <i class="fas fa-upload"></i> Thêm tài liệu
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-2">
                                            <form asp-action="XoaBai" method="post" class="d-inline" onsubmit="return confirm('Xóa bài học này?')">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="Id" value="@bai.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    baiIndex++;
                                }
                            }
                            else
                            {
                                <div class="text-muted text-center py-3">Chưa có bài học trong chương này.</div>
                            }
                        </div>
                        chuongIndex++;
                    }
                }
                else
                {
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-book fa-3x mb-3"></i>
                        <h5>Chưa có nội dung</h5>
                        <p>Bài giảng này chưa có chương nào được thêm vào.</p>
                    </div>
                }

                <!-- Resources Section -->
                <div class="resource-section">
                    <h4 class="mb-4">
                        <i class="fas fa-archive me-2"></i> Tài nguyên tổng hợp
                    </h4>
                    <div class="row g-4">
                        <!-- Images Column -->
                        <div class="col-lg-4">
                            <div class="card h-100 border-0 bg-white bg-opacity-90">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-images me-2"></i> Ảnh minh họa
                                        @if (taiNguyenAnh?.Any(t => t.BaiId == null) == true)
                                        {
                                            <span class="badge bg-light text-primary ms-2">@taiNguyenAnh.Count(t => t.BaiId == null)</span>
                                        }
                                    </h6>
                                </div>
                                <div class="card-body">
                                    @if (taiNguyenAnh?.Any(t => t.BaiId == null) == true)
                                    {
                                        <div class="row g-2">
                                            @foreach (var img in taiNguyenAnh.Where(t => t.BaiId == null).Take(4))
                                            {
                                                <div class="col-6">
                                                    <div class="card shadow-sm position-relative">
                                                        <img src="@img.Url" alt="Ảnh minh họa" class="card-img-top" style="height: 100px; object-fit: cover;" />
                                                        <div class="card-body p-2">
                                                            <a href="@img.Url" target="_blank" class="btn btn-sm btn-primary w-100">
                                                                <i class="fas fa-external-link-alt me-1"></i> Xem
                                                            </a>
                                                            @if (currentUserRole == "Teacher")
                                                            {
