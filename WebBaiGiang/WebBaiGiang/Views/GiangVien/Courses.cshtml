@using WebBaiGiang.ViewModel
@model PhanTrang<WebBaiGiang.Models.LopHoc>
@{
    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
}
<link href="~/css/courses.css" rel="stylesheet" />
<link href="~/css/pagination.css" rel="stylesheet" />

<style>
    /* CSS cho dropdown nút ba chấm */
    .course-dropdown {
        position: absolute;
        top: 0;
        right: 0;
        margin: 8px;
        z-index: 1000; /* Đảm bảo không bị che */
    }

    .dropdown-toggle {
        background: none;
        border: none;
        color: white;
        font-size: 1.25rem; /* Kích thước tương đương fs-5 */
        cursor: pointer;
        padding: 0;
    }

    .dropdown-menu {
        display: none; /* Ẩn mặc định */
        position: absolute;
        top: 100%;
        right: 0;
        background: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        min-width: 120px;
        z-index: 1001;
    }

        .dropdown-menu.show {
            display: block; /* Hiện khi click */
        }

    .dropdown-item {
        display: block;
        padding: 8px 12px;
        color: #333;
        text-decoration: none;
        font-size: 14px;
    }

        .dropdown-item:hover {
            background: #f0f0f0;
        }

    .dropdown-item-hide {
        margin-left: 3px;
        color: red;
    }

        .dropdown-item-hide:hover {
            background: #f0f0f0;
        }
</style>

<div class="conTent">
    <h3>Khoá học</h3>
</div>

<div class="search-filter">
    <div class="search-input-wrapper">
        <img src="~/img/loupe.png" class="search-icon" />
        <input type="text" placeholder="Tìm khóa học..." class="search-input-courses" />
    </div>
    <div class="dropdown">
        <button class="dropdown-button" onclick="toggleDropdown()">
            Mới nhất <span class="arrow-down">▼</span>
        </button>
        <div class="dropdown-content" id="dropdown-menu">
            <a href="#" onclick="filterCourses('newest')">Mới nhất</a>
            <a href="#" onclick="filterCourses('oldest')">Cũ nhất</a>
            <a href="#" onclick="filterCourses('incomplete')">Chưa hoàn thành</a>
            <a href="#" onclick="filterCourses('completed')">Đã hoàn thành</a>
        </div>
    </div>

    <button class="create-course-button" onclick="location.href='@Url.Action("CreateCourses", "GiangVien")'">
        Tạo khóa học
    </button>
</div>

<div class="container">
    <div class="courses-wrapper">
        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <div class="course-card position-relative">
                    <!-- Nút ba chấm dropdown -->
                    <div class="course-dropdown">
                        <button class="dropdown-toggle" onclick="toggleCourseDropdown(this)">
                             <!-- Ký tự ba chấm dọc -->
                        </button>
                        @{
                            var joinLink = Url.Action("Join", "Courses", new { code = course.JoinCode }, Context.Request.Scheme);
                        }
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Courses" asp-action="DetailCourses" asp-route-id="@course.Id">Vào lớp</a>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="copyToClipboard('@joinLink')">Chia sẻ lớp học</a>
                            <a class="dropdown-item" asp-action="EditCourses" asp-route-id="@course.Id">Chỉnh sửa</a>
                            <a class="dropdown-item dropdown-item-hide" data-id="@course.Id">Lưu trữ</a>
                        </div>
                    </div>

                    <!-- Nội dung khóa học -->
                    <div class="course-image">
                        <img src="@course.Picture" alt="Ảnh bìa khóa học" />
                    </div>
                    <div class="course-content">
                        <h4>@course.Name</h4>
                        @Html.Raw(course.Description)
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có khóa học nào.</p>
        }
    </div>

    <!-- PHÂN TRANG -->
    <div class="pagination">
        @if (Model.TotalPages > 1)
        {
            <ul class="pagination-list">
                @if (Model.HasPreviousPage)
                {
                    <li><a href="@Url.Action("Courses", new { page = Model.PageIndex - 1 })">← Trước</a></li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageIndex)
                    {
                        <li class="active">@i</li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Courses", new { page = i })">@i</a></li>
                    }
                }

                @if (Model.HasNextPage)
                {
                    <li><a href="@Url.Action("Courses", new { page = Model.PageIndex + 1 })">Sau →</a></li>
                }
            </ul>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Toggle dropdown lọc
    function toggleDropdown() {
        const menu = document.getElementById("dropdown-menu");
        menu.style.display = menu.style.display === "block" ? "none" : "block";
    }

    // Toggle dropdown nút ba chấm
    function toggleCourseDropdown(button) {
        const dropdownMenu = button.nextElementSibling;
        const isShown = dropdownMenu.classList.contains("show");
        // Đóng tất cả dropdown khác
        document.querySelectorAll(".dropdown-menu.show").forEach(menu => {
            menu.classList.remove("show");
        });
        // Toggle dropdown hiện tại
        if (!isShown) {
            dropdownMenu.classList.add("show");
        }
    }

    // Đóng dropdown khi click bên ngoài
    document.addEventListener("click", function (e) {
        const filterDropdown = document.querySelector(".search-filter .dropdown");
        const courseDropdowns = document.querySelectorAll(".course-dropdown");
        // Đóng dropdown lọc
        if (!filterDropdown.contains(e.target)) {
            document.getElementById("dropdown-menu").style.display = "none";
        }
        // Đóng dropdown nút ba chấm
        let isInsideCourseDropdown = false;
        courseDropdowns.forEach(dropdown => {
            if (dropdown.contains(e.target)) {
                isInsideCourseDropdown = true;
            }
        });
        if (!isInsideCourseDropdown) {
            document.querySelectorAll(".dropdown-menu.show").forEach(menu => {
                menu.classList.remove("show");
            });
        }
    });

    function filterCourses(option) {
        alert(`Lọc theo: ${option}`);
        document.getElementById("dropdown-menu").style.display = "none";
    }

    $(document).ready(function () {
        $('.dropdown-item-hide').click(function (e) {
            e.preventDefault();
            if (!confirm('Bạn có chắc muốn lưu trữ khóa học này?')) return;

            var courseId = $(this).data('id');
            var courseCard = $(this).closest('.course-card');

            $.ajax({
                url: '@Url.Action("ArchiveCourse", "GiangVien")',
                type: 'POST',
                data: { id: courseId },
                success: function (response) {
                    if (response.success) {
                        courseCard.fadeOut(500, function () { $(this).remove(); });
                    } else {
                        alert('Lưu trữ thất bại');
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi lưu trữ');
                }
            });
        });
    });

    function copyToClipboard(link) {
        navigator.clipboard.writeText(link).then(function () {
            alert("Đã sao chép liên kết lớp học!");
        }, function (err) {
            alert("Không thể sao chép: " + err);
        });
    }
</script>