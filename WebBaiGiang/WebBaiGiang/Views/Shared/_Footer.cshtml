@model WebBaiGiang.Models.ThongTinWeb
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<footer class="footer text-white pt-5 pb-3" style="background: linear-gradient(135deg, #1e3c72 0%, #98652a29 100%")>
    <div class="container footer-container">

        <!-- Sứ mệnh và ảnh động -->
        <div class="row footer-section mb-4 align-items-center">
            <div class="col-md-8">
                <h5 class="fw-bold mb-2">@Model.Name</h5>
                <p class="mission fs-5">@Model.Description</p>
            </div>
        </div>

        <!-- Điều hướng & Liên hệ -->
        <div class="row footer-nav text-white mb-4">
            <div class="col-md-4 footer-column">
                <h5 class="fw-bold mb-3">Về chúng tôi</h5>
                <ul class="list-unstyled footer-links">
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Tin tức</a></li>
                    <li><a href="#">Đội ngũ</a></li>
                    <li><a href="#">Nhà tài trợ</a></li>
                    <li><a href="#">Tuyển dụng</a></li>
                </ul>
            </div>
            <div class="col-md-4 footer-column">
                <h5 class="fw-bold mb-3">Liên hệ</h5>
                <ul class="list-unstyled footer-links">
                    <li>
                        <strong>Địa chỉ:</strong> @Model.DiaChi
                    </li>
                    <li>
                        <strong>Email:</strong> <a href="mailto:@Model.EmailLienHe" class="text-white">@Model.EmailLienHe</a>
                    </li>
                    <li>
                        <strong>Điện thoại:</strong> <a href="tel:@Model.PhoneLienHe" class="text-white">@Model.PhoneLienHe</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Mạng xã hội -->
        <div class="footer-social text-center mb-4">
            <h5 class="fw-bold mb-3">Theo dõi chúng tôi</h5>

            @if (!string.IsNullOrEmpty(Model.FacebookLink))
            {
                <a href="@Model.FacebookLink" target="_blank" class="me-2">
                    <img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook" width="32">
                </a>
            }

            @if (!string.IsNullOrEmpty(Model.YoutubeLink))
            {
                <a href="@Model.YoutubeLink" target="_blank" class="me-2">
                    <img src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png" alt="YouTube" width="32" />
                </a>
            }

            @if (!string.IsNullOrEmpty(Model.InstagramLink))
            {
                <a href="@Model.InstagramLink" target="_blank" class="me-2">
                    <img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" width="32" />
                </a>
            }
        </div>

        <style>
            .footer-social a img {
                vertical-align: middle;
                text-decoration: none;
                border: none;
            }

            .footer-social a {
                text-decoration: none !important;
            }

            .footer-bottom {
                font-size: 1rem; /* Tăng kích thước chữ (1rem ~ 16px) */
            }

                .footer-bottom .copyright-text {
                    font-weight: 500;
                    font-size: 1.1rem; /* To hơn mặc định */
                    text-align: center;
                    line-height: 1.8;
                }

        </style>
        <!-- Bản quyền -->
        <div class="footer-bottom text-center border-top border-light pt-3 mt-4" style="margin-left:28%">
            <p class="mb-0 text-light small">
                © @DateTime.Now.Year @Model.TenTruong.
                <a href="#" class="text-white text-decoration-underline">Điều khoản</a> |
                <a href="#" class="text-white text-decoration-underline">Chính sách bảo mật</a>
            </p>
        </div>
    </div>
</footer>
