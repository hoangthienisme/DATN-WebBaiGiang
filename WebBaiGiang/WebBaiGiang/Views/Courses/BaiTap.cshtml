@model List<BaiTap>
@{
    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
    var tenlop = ViewBag.TenLop as string;
    var lopId = ViewBag.LopId;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h4 class="fw-bold">Bài tập của lớp @tenlop</h4>
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                + Thêm mới
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="@Url.Action("TaoBaiTap", new { lopId = lopId })">Bài tập</a></li>
                <li><a class="dropdown-item" href="@Url.Action("TaoBaiKiemTra", new { lopId = lopId })">Bài kiểm tra</a></li>
            </ul>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Không có bài tập nào cho lớp này.</div>
    }

    @foreach (var item in Model)
    {
        <div class="d-flex justify-content-between align-items-center border-bottom py-3" style="margin-left: 60px;">
            <div class="d-flex align-items-center" style="gap: 8px;">
                <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                    <i class="bi bi-pencil-square fs-5"></i>
                </div>
                <div>
                    <div class="fw-semibold">@item.Title</div>
                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        <div class="text-muted small">@item.Description</div>
                    }
                </div>
            </div>

            <div class="d-flex align-items-center" style="gap: 12px;">
                <div class="text-muted small">
                    Hạn nộp: @item.DueDate?.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="text-muted small">
                    Đã đăng vào: @item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="dropdown">
                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" class="text-dark text-decoration-none" style="cursor:pointer;">
                        <i class="bi bi-three-dots-vertical fs-4"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-action="SuaBaiTap" asp-route-id="@item.Id">Chỉnh sửa</a></li>
                        <li>
                            <form asp-action="XoaBaiTap" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài tập này không?');">
                                <button type="submit" class="dropdown-item text-danger" style="background:none;">
                                    Xóa
                                </button>
                            </form>
                        </li>
                        @if (!string.IsNullOrEmpty(item.ContentUrl))
                        {
                            <li><a class="dropdown-item" href="@item.ContentUrl" target="_blank">Xem file đính kèm</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
