@using WebBaiGiang.ViewModel
@model LopHocViewModel

@{
    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
}
<link href="~/css/pagination.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="conTent">
    <h3>Khoá học > @Model.Name</h3>
</div>

<style>
    .conTent h3 {
        margin-left: 70px;
        margin-top: 10px;
        font-family: var(--font-stack-heading-serif);
        font-weight: 700;
        font-size: 30px;
        line-height: 1.25;
        letter-spacing: -0.016rem;
        max-width: 36em;
    }

    .header-banner {
        background-color: #1a73e8;
        color: white;
        padding: 2rem;
        border-radius: 8px;
        background-size: cover;
        background-position: center;
        min-height: 200px;
        display: flex;
        align-items: flex-end;
        max-width: 90%;
    }

    .nav-tabs .nav-link.active {
        border-bottom: 2px solid #1a73e8;
        color: #1a73e8;
    }

    .card-post {
        border-radius: 12px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .class-title {
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        font-size: 30px;
        font-weight: 700;
    }
</style>

<div class="container mt-4" style="margin-left:60px">
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item"><a class="nav-link active" href="#">Nội dung</a></li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("BaiTap", "Courses", new { id = Model.Id })">Bài tập trên lớp</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" onclick="showTab('peopleTab')">Mọi người</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="#">Điểm</a></li>
    </ul>

    <!-- Banner ảnh bìa lớp học -->
    <div class="header-banner mb-4" style="background-image: url('@Model.Picture');">
        <div class="container">
            <h3 class="class-title text-white">@Model.Name</h3>
        </div>
    </div>
    <!-- Nội dung mặc định - bài giảng -->
    <div id="contentTab">
        <div class="row">
            @foreach (var item in Model.BaiGiangs)
            {
                <!-- nội dung bài giảng -->
            }
        </div>
    </div>

    <!-- Tab Mọi người -->
    <div id="peopleTab" style="display: none;">
        @Html.Partial("_ThemNguoiPartial", new AddUserToClassViewModel { ClassId = Model.Id })
    </div>


    <!-- Danh sách bài giảng -->
    <div class="row">
        @foreach (var item in Model.BaiGiangs)
        {
            <div class="d-flex justify-content-between align-items-center border-bottom py-3" style="max-width: 90%;">
                <div class="d-flex align-items-center" style="gap: 8px;">
                    <div class="rounded-circle bg-success text-white d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-journal-richtext fs-5"></i>
                    </div>
                    <span class="fw-semibold">@item.Title</span>
                </div>
                <div class="d-flex align-items-center" style="gap: 12px;">
                    <div class="text-muted small">
                        Đã đăng vào @item.CreatedDate.ToString("HH:mm")
                    </div>
                    <div class="dropdown">
                        <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" class="text-dark text-decoration-none" style="cursor:pointer;">
                            <i class="bi bi-three-dots-vertical fs-4"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="GiangVien" asp-action="SuaBaiGiang" asp-route-id="@item.Id">Chỉnh sửa</a></li>
                            <li>
                                <form asp-controller="GiangVien" asp-action="XoaBaiGiang" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài giảng này không?');">
                                    <button type="submit" class="dropdown-item text-danger" style="background:none;">
                                        Xóa
                                    </button>
                                </form>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- PHÂN TRANG -->
    @if (Model.BaiGiangs != null && Model.BaiGiangs.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.BaiGiangs.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DetailCourses", new { id = Model.Id, page = Model.BaiGiangs.PageIndex - 1 })">← Trước</a>
                    </li>
                }

                @for (int i = 1; i <= Model.BaiGiangs.TotalPages; i++)
                {
                    if (i == Model.BaiGiangs.PageIndex)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("DetailCourses", new { id = Model.Id, page = i })">@i</a>
                        </li>
                    }
                }

                @if (Model.BaiGiangs.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DetailCourses", new { id = Model.Id, page = Model.BaiGiangs.PageIndex + 1 })">Sau →</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
<script>
    window.onload = function () {
        if (window.location.href.includes("page=")) {
            window.scrollTo({
                top: document.querySelector(".row").offsetTop - 100,
                behavior: 'smooth'
            });
        }
    };
</script>
<script>
    function showTab(tabId) {
        document.getElementById("contentTab").style.display = "none";
        document.getElementById("peopleTab").style.display = "block";
    }
</script>
