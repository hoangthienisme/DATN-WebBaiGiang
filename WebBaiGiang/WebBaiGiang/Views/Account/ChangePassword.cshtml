@using WebBaiGiang.ViewModel
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="max-w-xl mx-auto mt-10 p-8 bg-white shadow-md rounded-xl">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">🔐 Đổi mật khẩu</h2>

    @if (ViewBag.Message != null)
    {
        <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4 text-center shadow">
            @ViewBag.Message
        </div>
    }

    <form asp-action="ChangePassword" method="post" class="space-y-6">
        <div class="relative">
            <label asp-for="CurrentPassword" class="block text-gray-700 font-medium mb-1">Mật khẩu hiện tại</label>
            <input asp-for="CurrentPassword" type="password" id="currentPassword" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <button type="button" class="absolute right-3 top-[38px] text-sm text-gray-600" onclick="togglePassword('currentPassword')">👁️</button>
            <span asp-validation-for="CurrentPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="relative">
            <label asp-for="NewPassword" class="block text-gray-700 font-medium mb-1">Mật khẩu mới</label>
            <input asp-for="NewPassword" type="password" id="newPassword" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <button type="button" class="absolute right-3 top-[38px] text-sm text-gray-600" onclick="togglePassword('newPassword')">👁️</button>
            <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="relative">
            <label asp-for="ConfirmNewPassword" class="block text-gray-700 font-medium mb-1">Xác nhận mật khẩu mới</label>
            <input asp-for="ConfirmNewPassword" type="password" id="confirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <button type="button" class="absolute right-3 top-[38px] text-sm text-gray-600" onclick="togglePassword('confirmPassword')">👁️</button>
            <span asp-validation-for="ConfirmNewPassword" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
            💾 Đổi mật khẩu
        </button>
    </form>

    <div asp-validation-summary="All" class="text-red-600 mt-4 text-sm text-center"></div>
</div>

<script>
    function togglePassword(id) {
        const input = document.getElementById(id);
        input.type = input.type === "password" ? "text" : "password";
    }
</script>
