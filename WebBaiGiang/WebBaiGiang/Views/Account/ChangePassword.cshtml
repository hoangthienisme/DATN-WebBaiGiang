@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<h2 class="text-2xl font-bold mb-4">Đổi mật khẩu</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="ChangePassword" method="post" class="space-y-4 max-w-md">
    <div>
        <label>Mật khẩu hiện tại</label>
        <input asp-for="CurrentPassword" type="password" class="form-control" />
    </div>

    <div>
        <label>Mật khẩu mới</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
    </div>

    <div>
        <label>Xác nhận mật khẩu mới</label>
        <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Đổi mật khẩu</button>
</form>

<div asp-validation-summary="All" class="text-danger mt-3"></div>
