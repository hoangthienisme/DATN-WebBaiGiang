@model WebBaiGiang.ViewModel.SignUpViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng ký tài khoản";

}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<style>
    .text-danger.small {
        display: block;
        min-height: 18px;
        margin-top: 4px;
        font-size: 0.875rem;
    }

    .form-group {
        position: relative;
        margin-bottom: 1rem;
    }

    .form-control {
        padding-right: 2.5rem;
    }

    .btn-toggle-eye {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        background: none;
        border: none;
    }
</style>

<div class="register-container-dangky">
    <div class="singup-register-box">
        <div class="register-image">
            <img src="@Url.Content("~/img/hochanh.jpg")" alt="Ảnh Kha" />
        </div>
        <div class="register-form-dangky">
            <h2>Đăng ký với Email</h2>
            <form method="post" asp-action="SignUp" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" id="password" class="form-control" />
                    <button type="button" class="btn-toggle-eye" onclick="togglePassword('password')">👁️</button>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control" />
                    <button type="button" class="btn-toggle-eye" onclick="togglePassword('confirmPassword')">👁️</button>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="submit-btn">
                    <span class="icon">📩</span> Tiếp tục với Email
                </button>
            </form>

            <div class="other-options">
                <span>Các tùy chọn đăng ký khác</span>
                <div class="social-icons">
                    <button><img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" alt="Google"></button>
                    <button><img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook"></button>
                    <button><img src="https://cdn-icons-png.flaticon.com/512/733/733579.png" alt="Apple"></button>
                </div>
            </div>

            <span class="have-account">
                Bạn đã có tài khoản?
                <a href="/Account/Login">Đăng nhập</a>
            </span>
        </div>
    </div>
</div>

<script>
    function togglePassword(id) {
        const input = document.getElementById(id);
        input.type = input.type === "password" ? "text" : "password";
    }
</script>
