@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- Kế thừa layout chính -->
    ViewBag.Title = "Đăng ký tài khoản";

}
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full  flex">
        <!-- Left: Image -->
        <div class="hidden md:block w-1/2">
            <img src="@Url.Content("~/img/anhkha.png")" alt="Ảnh Kha" class="w-full h-auto" />
        </div>

        <!-- Right: Sign Up Form -->
        <div class="w-3/4 md:w-2/3 lg:w-1/2 bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Đăng ký với Email</h2>
            <form method="post" action="/Account/SignUp">
                <div class="mb-4">
                    <label class="block text-gray-700">Họ và tên</label>
                    <input type="text" name="fullname" class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-purple-300">
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700">Email</label>
                    <input type="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-purple-300">
                </div>

                <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded-lg flex items-center justify-center">
                    <span class="mr-2">📩</span> Tiếp tục với Email
                </button>
            </form>

            <!-- Other Sign Up Options -->
            <div class="text-center mt-6 text-gray-500">
                <span>Các tùy chọn đăng ký khác</span>
                <div class="flex justify-center mt-2 space-x-4">
                    <button class="p-3 rounded-lg border">
                        <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" alt="Google" class="w-6">
                    </button>
                    <button class="p-3 rounded-lg border">
                        <img src="https://cdn-icons-png.flaticon.com/512/124/124010.png" alt="Facebook" class="w-6">
                    </button>
                    <button class="p-3 rounded-lg border">
                        <img src="https://cdn-icons-png.flaticon.com/512/733/733579.png" alt="Apple" class="w-6">
                    </button>
                </div>
            </div>
            <span class="HaveAccount">Bạn đã có tài khoản ?
                <a href="/Account/SignIn" class="text-blue-500">Đăng nhập</a>
            </span>
        </div>
    </div>
</div>
